<Window x:Class="BreakProjectForTelegramBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakProjectForTelegramBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="383*"/>
            <RowDefinition Height="51*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.RowSpan="2">
            <TabItem Header="CreateTest" IsSelected="True">
                <Grid x:Name="Grid" Background="Gainsboro">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="353*"/>
                        <ColumnDefinition Width="426*"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="Grid_optionAnswer" Margin="7,85,296,10" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.IsSharedSizeScope="True" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False" Grid.ColumnSpan="2">
                        <Button x:Name="Button_DeleteOptionAnswer" Content="DELETE" HorizontalAlignment="Left" Margin="415,141,0,0" VerticalAlignment="Top" Click="Button_DeleteOptionAnswer_Click" Width="60"/>
                        <Button x:Name="Button_AddOptionAnswer" Content="ADD" HorizontalAlignment="Left" Margin="415,104,0,0" VerticalAlignment="Top" Click="Button_AddOptionAnswer_Click" Width="60" RenderTransformOrigin="0.483,0.804" />
                        <ListBox x:Name="ListBoxQuestion" HorizontalAlignment="Left" Margin="0,104,0,0" Width="397" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="166" VerticalAlignment="Top" />
                    </Grid>
                    <ComboBox x:Name="ComboBox_QuestionType" HorizontalAlignment="Left" Margin="124,58,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Height="25" Background="Black" BorderBrush="#FFED1D1D">
                        <ComboBoxItem Content="QuestionInput"/>
                        <ComboBoxItem Content="QuestionYesNo"/>
                        <ComboBoxItem Content="QuestionMultiSelect"/>
                        <ComboBoxItem Content="QuestionSingleSelect"/>
                        <ComboBoxItem Content="QuestionSort"/>
                    </ComboBox>
                    <Button Content="Create" HorizontalAlignment="Left" Margin="64,313,0,0" VerticalAlignment="Top" Height="42" Width="64" Grid.Column="1" />
                    <TextBox x:Name="TextBox_questionText" HorizontalAlignment="Left" Margin="7,85,0,0" TextWrapping="Wrap" Text="Write the question..." VerticalAlignment="Top" Width="474" Height="84" TextDecorations="{x:Null}" FontStyle="Italic" FontWeight="Normal" Grid.ColumnSpan="2"/>
                    <TextBlock TextWrapping="Wrap" Margin="10,58,0,0" FontSize="15" HorizontalAlignment="Left" Width="114" Height="27" VerticalAlignment="Top" Text="Choose type Q:"/>
                    <TextBox x:Name="TestNameTextBox" HorizontalAlignment="Left" Height="29" Margin="93,10,0,0" TextWrapping="Wrap" Text="Write test name..." VerticalAlignment="Top" Width="192" FontSize="17"  FontStyle="Italic"/>
                    <Button Content="AddTitle" x:Name="AddTitleButton" HorizontalAlignment="Left" Height="27" Margin="299,12,0,0" VerticalAlignment="Top" Width="78" Click="AddTitleButton_Click" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="ComboBox_ChooseTest" HorizontalAlignment="Left" Margin="4,58,0,0" VerticalAlignment="Top" Width="124" SelectionChanged="ComboBox_ChooseTest_SelectionChanged" Height="25" Grid.Column="1"/>
                    <TextBlock TextWrapping="Wrap" Margin="261,57,0,0" FontSize="15" HorizontalAlignment="Left" Width="91" Height="27" VerticalAlignment="Top" Text="Choose test:"/>
                </Grid>
            </TabItem>

            <TabItem Header="Список" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">

            </TabItem>
            <TabItem Header="Список вопросов" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
            </TabItem>
            <TabItem Header="Список юзеров" Height="22" FontSize="12" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <DataGrid x:Name="ListUser" Loaded="Window_User" AutoGenerateColumns ="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=LastName}" IsReadOnly="False" Header="LastName" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Name}" IsReadOnly="False" Header="Name" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Age}" IsReadOnly="False" Header="Age" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Группы юзеров" Height="22" FontSize="12" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid x:Name="GridGroup" Background="#FFEFEFEF" RenderTransformOrigin="0.501,0.465" Margin="0,0,-1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="49*"/>
                        <ColumnDefinition Width="729*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Group" HorizontalAlignment="Left" Margin="15,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="27" TextDecorations="{x:Null}" FontWeight="Normal" Grid.ColumnSpan="3"/>
                    <Button x:Name="AddNewGroup" Content="Create new Group" Height="26" Margin="149,179,0,0" VerticalAlignment="Top" Grid.Column="2" Click="AddNewGroup_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="103">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.541"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <ListBox x:Name="WriteNamenewGroup" HorizontalAlignment="Left" Margin="3,22,0,0" Width="297" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="140" VerticalAlignment="Top" Grid.Column="1" Background="#FF67DE8F" SelectionChanged="WriteNamenewGroup_SelectionChanged" Grid.ColumnSpan="2" />
                    <Button x:Name="ChangeUserName" Content="Change User Name" FontSize="11" HorizontalAlignment="Left" Height="27" Margin="549,179,0,0" VerticalAlignment="Top" Width="103" Grid.Column="2"/>
                    <TextBox x:Name="WriteName" HorizontalAlignment="Left" Margin="351,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="27" TextDecorations="{x:Null}" FontWeight="Normal" Grid.Column="2"/>
                    <ListBox x:Name="UsersinGroup" HorizontalAlignment="Left" Margin="351,22,0,0" Width="305" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="140" VerticalAlignment="Top" Grid.Column="2" Background="#FF67DE8F" SelectionChanged="UsersinGroup_SelectionChanged" />
                    <TextBox x:Name="Group_Copy" HorizontalAlignment="Left" Margin="15,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="26" TextDecorations="{x:Null}" FontWeight="Normal" Grid.ColumnSpan="3"/>
                    <Button x:Name="AddNewGroup_Copy" Content="Change Name" Height="26" Margin="148,220,0,0" VerticalAlignment="Top" Grid.Column="2" Click="AddNewGroup_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="103">

                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.541"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <ComboBox Grid.Column="2" Margin="351,220,0,0" HorizontalAlignment="Left" Width="187" Height="25" VerticalAlignment="Top">
                        <ComboBoxItem Content="Fixiki"/>
                    </ComboBox>
                    <Button x:Name="AddNewUserinGroup" Content="Add to Group" HorizontalAlignment="Left" Height="27" Margin="551,221,0,0" VerticalAlignment="Top" Width="103" Grid.Column="2"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>


</Window>
