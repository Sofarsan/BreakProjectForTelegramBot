<Window x:Class="BreakProjectForTelegramBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakProjectForTelegramBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400*"/>
            <ColumnDefinition Width="400*"/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.ColumnSpan="2">
            <TabItem Header="CreateTest" IsSelected="True">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="ComboBox_QuestionType" HorizontalAlignment="Left" Margin="567,58,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Grid.Column="3">
                        <ComboBoxItem Content="QuestionInput"/>
                        <ComboBoxItem Content="QuestionMultiSelect"/>
                        <ComboBoxItem Content="QuestionYesNo"/>
                        <ComboBoxItem Content="QuestionSingleSelect"/>
                        <ComboBoxItem Content="QuestionSort"/>
                    </ComboBox>
                    <TextBox x:Name="TextBox_questionText" HorizontalAlignment="Left" Margin="7,47,0,0" TextWrapping="Wrap" Text="Введите название теста..." VerticalAlignment="Top" Width="542" Height="43" Grid.ColumnSpan="3" Grid.Column="1" TextDecorations="{x:Null}" FontStyle="Italic" FontWeight="Normal"/>
                    <Grid x:Name="Grid_optionAnswer" Margin="7,95,227,10" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.IsSharedSizeScope="True" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False" Grid.ColumnSpan="3" Grid.Column="1">
                        <Button x:Name="Button_DeleteOptionAnswer" Grid.Column="1" Content="DELETE" HorizontalAlignment="Left" Margin="480,50,0,0" VerticalAlignment="Top" Click="Button_DeleteOptionAnswer_Click" Width="60"/>
                        <Button x:Name="Button_AddOptionAnswer" Content="ADD" HorizontalAlignment="Left" Margin="480,15,0,0" VerticalAlignment="Top" Click="Button_AddOptionAnswer_Click" Grid.Column="1" Width="60" />
                    </Grid>
                    <Button Grid.Column="3" Content="Create" HorizontalAlignment="Left" Margin="599,203,0,0" VerticalAlignment="Top" Height="56" Width="88" Click="Button_Click"/>
                    <ListBox x:Name="ListBoxQuestion" HorizontalAlignment="Left" Height="250" Margin="7,106,0,0" VerticalAlignment="Top" Width="415" d:ItemsSource="{d:SampleData ItemCount=5}">

                    </ListBox>
                </Grid>
            </TabItem>

            <TabItem Header="Список" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">

            </TabItem>
            <TabItem Header="Список вопросов" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
            </TabItem>
            <TabItem Header="Список юзеров" Height="22" FontSize="12" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <DataGrid x:Name="ListUser" Loaded="Window_User" AutoGenerateColumns ="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=LastName}" IsReadOnly="True" Header="LastName" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Name}" IsReadOnly="True" Header="Name" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Age}" IsReadOnly="True" Header="Age" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Job}" IsReadOnly="True" Header="Job" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Группы юзеров">
                <Grid Background="#FF4EDC9E">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="112*"/>
                        <ColumnDefinition Width="63*"/>
                        <ColumnDefinition Width="74*"/>
                        <ColumnDefinition Width="515*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ouiy" HorizontalAlignment="Left" Height="150" Margin="7,6,0,0" VerticalAlignment="Top" Width="309" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="6">
                    </ListBox >
                    <TextBox x:Name="AddGroupName" HorizontalAlignment="Left" Margin="8,166,0,0" TextWrapping="Wrap" Text="Введите название Группы" VerticalAlignment="Top" Width="195" Height="30" Grid.ColumnSpan="4" TextDecorations="{x:Null}" FontStyle="Italic" FontWeight="Normal"/>
                    <Button Grid.Column="4" Content="Add New Group" HorizontalAlignment="Left" Margin="17,167,0,0" VerticalAlignment="Top" Height="30" Width="95" Click="Button_Click" Grid.ColumnSpan="2"/>
                    <ListBox x:Name="ouiy_Copy" HorizontalAlignment="Left" Height="150" Margin="90,6,0,0" VerticalAlignment="Top" Width="309" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.Column="5"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>


</Window>
