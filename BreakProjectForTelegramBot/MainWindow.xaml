<Window x:Class="BreakProjectForTelegramBot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BreakProjectForTelegramBot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl Grid.RowSpan="2">
            <TabItem Header="CreateTest" IsSelected="True">
                <Grid x:Name="Grid" Background="Gainsboro">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="45*"/>
                        <ColumnDefinition Width="214*"/>
                        <ColumnDefinition Width="138*"/>
                    </Grid.ColumnDefinitions>
                    <Grid x:Name="Grid_optionAnswer" Margin="7,85,20,10" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.IsSharedSizeScope="True" ScrollViewer.CanContentScroll="True" UseLayoutRounding="False" Grid.ColumnSpan="2">
                        <Button x:Name="Button_DeleteOptionAnswer" Content="DELETE" HorizontalAlignment="Left" Margin="415,141,0,0" VerticalAlignment="Top" Click="Button_DeleteOptionAnswer_Click" Width="60"/>
                        <Button x:Name="Button_AddOptionAnswer" Content="ADD" HorizontalAlignment="Left" Margin="415,104,0,0" VerticalAlignment="Top" Click="Button_AddOptionAnswer_Click" Width="60" RenderTransformOrigin="0.483,0.804" />
                        <ListBox x:Name="ListBoxQuestion" HorizontalAlignment="Left" Margin="-6,104,0,0" Width="403" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="166" VerticalAlignment="Top" />
                    </Grid>
                    <Button x:Name="Button_SaveQ" Content="Save" HorizontalAlignment="Left" Margin="116,360,0,0" VerticalAlignment="Top" Click="Button_SaveQ_Click" Width="60" Grid.Column="2"/>
                    <ComboBox x:Name="ComboBox_QuestionType" HorizontalAlignment="Left" Margin="34,58,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" Height="25" Background="Black" BorderBrush="#FFED1D1D" Grid.Column="1">
                        <ComboBoxItem Content="QuestionInput"/>
                        <ComboBoxItem Content="QuestionYesNo"/>
                        <ComboBoxItem Content="QuestionMultiSelect"/>
                        <ComboBoxItem Content="QuestionSingleSelect"/>
                        <ComboBoxItem Content="QuestionSort"/>
                    </ComboBox>
                    <TextBox x:Name="TextBox_questionText" HorizontalAlignment="Left" Margin="0,101,0,0" TextWrapping="Wrap" Text="Write the question..." VerticalAlignment="Top" Width="474" Height="84" TextDecorations="{x:Null}" FontStyle="Italic" FontWeight="Normal" Grid.ColumnSpan="2" PreviewMouseLeftButtonDown="TextBox_questionText_PreviewMouseLeftButtonDown"/>
                    <TextBox x:Name="TestNameTextBox" HorizontalAlignment="Left" Height="29" Margin="3,10,0,0" TextWrapping="Wrap" Text="Write test name..." VerticalAlignment="Top" Width="192" FontSize="17"  FontStyle="Italic" PreviewMouseLeftButtonDown="TestNameTextBox_PreviewMouseLeftButtonDown" Grid.Column="1" />
                    <Button x:Name="Button_Create" Content="Create" HorizontalAlignment="Left" Margin="332,313,0,0" VerticalAlignment="Top" Height="42" Width="59" Click="Button_Create_Click" Grid.Column="1"/>
                    <TextBlock TextWrapping="Wrap" Margin="10,58,0,0" FontSize="15" HorizontalAlignment="Left" Width="114" Height="27" VerticalAlignment="Top" Text="Choose type Q:" Grid.ColumnSpan="2"/>
                    <Button Content="AddTitle" x:Name="AddTitleButton" HorizontalAlignment="Left" Height="27" Margin="209,12,0,0" VerticalAlignment="Top" Width="78" Click="AddTitleButton_Click" Grid.Column="1"/>
                    <ComboBox x:Name="ComboBox_ChooseTest" HorizontalAlignment="Left" Margin="267,58,0,0" VerticalAlignment="Top" Width="124" SelectionChanged="ComboBox_ChooseTest_SelectionChanged" Height="25" Grid.Column="1"/>
                    <TextBlock TextWrapping="Wrap" Margin="171,57,0,0" FontSize="15" HorizontalAlignment="Left" Width="91" Height="27" VerticalAlignment="Top" Text="Choose test:" Grid.Column="1"/>
                    <ListBox x:Name="ListQuestions" HorizontalAlignment="Left" Height="273" Margin="39,82,0,0" VerticalAlignment="Top" Width="214" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="ListQuestions_SelectionChanged" Grid.Column="2"/>
                </Grid>
            </TabItem>

            <TabItem Header="Ботик" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="ListBox_BotMessages" Margin="20" Grid.Column="1" Grid.RowSpan="2" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#FFB2DE9F"/>
                    <Button Content="SEND"  Grid.Row="1" Margin="95, 20, 95, 115" Background="#FFC6ECB6" FontSize="24" FontWeight="Bold" Click="ButtonSend_Click"/>
                    <Button Content="START BOT"  Grid.Row="1" Margin="95, 115, 95, 20" Background="#FFC6ECB6" FontSize="24" FontWeight="Bold" Click="ButtonStart_Click"/>
                    <TextBox x:Name="TextBox_Send" Text="Пишу в бота..." Margin="55,40,55,0" Height="150" VerticalAlignment="Top" HorizontalAlignment="Center" Width="287" FontStyle="Italic" Background="#FFFBE9E9" />
                </Grid>
            </TabItem>
            <TabItem Header="Список вопросов" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
            </TabItem>
            <TabItem Header="Список юзеров" Height="22" FontSize="12" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <DataGrid x:Name="ListUser" Loaded="Window_User" AutoGenerateColumns ="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=LastName}" IsReadOnly="True" Header="LastName" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Name}" IsReadOnly="True" Header="Name" Width="110"/>
                        <DataGridTextColumn Binding="{Binding Path=Age}" IsReadOnly="True" Header="Age" Width="110"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Группы юзеров" Height="22" FontSize="12" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid x:Name="GridGroup" Background="#FFEFEFEF" RenderTransformOrigin="0.501,0.465" Margin="0,0,-1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="49*"/>
                        <ColumnDefinition Width="729*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="Group" HorizontalAlignment="Left" Margin="15,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="27" TextDecorations="{x:Null}" FontWeight="Normal" Grid.ColumnSpan="3"/>
                    <Button x:Name="AddNewGroup" Content="Create new Group" Height="26" Margin="149,179,0,0" VerticalAlignment="Top" Grid.Column="2" Click="AddNewGroup_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="103">
                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.541"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <ListBox x:Name="WriteNamenewGroup" HorizontalAlignment="Left" Margin="3,22,0,0" Width="297" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="140" VerticalAlignment="Top" Grid.Column="1" Background="#FF67DE8F"  Grid.ColumnSpan="2" />
                    <Button x:Name="ChangeUserName" Content="Change User Name" FontSize="11" HorizontalAlignment="Left" Height="27" Margin="549,179,0,0" VerticalAlignment="Top" Width="103" Grid.Column="2" Click="ChangeUserName_Click"/>
                    <TextBox x:Name="WriteName" HorizontalAlignment="Left" Margin="351,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="27" TextDecorations="{x:Null}" FontWeight="Normal" Grid.Column="2"/>
                    <ListBox x:Name="UsersinGroup" HorizontalAlignment="Left" Margin="351,22,0,0" Width="305" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Height="140" VerticalAlignment="Top" Grid.Column="2" Background="#FF67DE8F" SelectionChanged="UsersinGroup_SelectionChanged" />
                    <TextBox x:Name="Group_Copy" HorizontalAlignment="Left" Margin="15,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" Height="26" TextDecorations="{x:Null}" FontWeight="Normal" Grid.ColumnSpan="3"/>
                    <Button x:Name="AddNewGroup_Copy" Content="Change Name" Height="26" Margin="148,220,0,0" VerticalAlignment="Top" Grid.Column="2" Click="AddNewGroup_Click" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="103">

                        <Button.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.541"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Button.RenderTransform>
                    </Button>
                    <ComboBox Grid.Column="2" Margin="351,220,0,0" HorizontalAlignment="Left" Width="187" Height="25" VerticalAlignment="Top">
                        <ComboBoxItem Content="Fixiki"/>
                    </ComboBox>
                    <Button x:Name="AddNewUserinGroup" Content="Add to Group" HorizontalAlignment="Left" Height="27" Margin="551,221,0,0" VerticalAlignment="Top" Width="103" Grid.Column="2" Click="AddNewUserinGroup_Click"/>
                </Grid>
            </TabItem>
            <Grid/>
            <Grid/>
        </TabControl>
    </Grid>


</Window>
